@page "/"
@using Gemini.Portal.Client.Components.Svg.Shapes.Rect

<PageTitle>Index</PageTitle>

<textarea @bind="Input" @bind:event="oninput" style="width:100%;height:150px;" />
<div style="height:80vh">
    <Svg @ref="_svg" Input=@Input InputUpdated="(string s) => { Input = s; StateHasChanged(); }" SelectionMode="SelectionMode.WindowSelection" />
</div>

<button onclick="@(() => Rect.AddNew(_svg))">Add Rect</button>

@code {
    protected Svg _svg;
    protected string Input = @"
    <rect x=""120"" y=""380"" height=""125"" width=""140"" fill=""green"" stroke=""blue"" stroke-width=""2""></rect>
    ";
}
